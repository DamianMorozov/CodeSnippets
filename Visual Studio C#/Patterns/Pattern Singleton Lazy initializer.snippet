  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>Pattern Singleton Lazy initializer</Title>
      <Shortcut>cs_patt_singleton_lazy_initializer</Shortcut>
      <Description>Paste code</Description>
      <Author>Damian Viktorovich Morozov</Author>
      <SnippetTypes>
        <SnippetType>SurroundsWith</SnippetType>
      </SnippetTypes>
    </Header>
    <Snippet>
      <Code Language="csharp">
        <![CDATA[public class $SomeClass$
{
#region Design pattern "Lazy Singleton"

private static $SomeClass$ _instance;
public static $SomeClass$ Instance => LazyInitializer.EnsureInitialized(ref _instance);

#endregion

#region Constructor and destructor

public $SomeClass$() { SetupDefault(); }

public void SetupDefault()
{
    // $MethodsSetupDefault$
}

public void Setup()
{
    // $MethodsSetup$
}

#endregion
}$end$]]>
      </Code>
      <Declarations>
        <Literal>
          <ID>SomeClass</ID>
          <ToolTip>Class name.</ToolTip>
          <Default>SomeClass</Default>
        </Literal>
        <Literal>
          <ID>MethodsSetupDefault</ID>
          <ToolTip>Default methods.</ToolTip>
          <Default>Default methods</Default>
        </Literal>
        <Literal>
          <ID>MethodsSetup</ID>
          <ToolTip>Setup methods.</ToolTip>
          <Default>Setup methods</Default>
        </Literal>
      </Declarations>
      <Imports>
        <Import>
          <Namespace>System.Threading</Namespace>
        </Import>
      </Imports>
    </Snippet>
  </CodeSnippet>
